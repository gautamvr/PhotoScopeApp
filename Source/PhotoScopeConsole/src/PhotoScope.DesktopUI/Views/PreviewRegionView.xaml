<UserControl x:Class="PhotoScope.DesktopUI.Views.PreviewRegionView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:PhotoScope.DesktopUI.Views"
             xmlns:fa="http://schemas.fontawesome.io/icons/"
             xmlns:converter="clr-namespace:PhotoScope.DesktopUI.Converters" Name="PreviewRegion"
             mc:Ignorable="d" Visibility="{Binding Path=IsPreviewOpen, Converter={x:Static converter:BoolToCollapsedVisibilityConverter.Instance}}"
             Width =" 500">

    <Grid Name="PhotoFeedGrid" DataContext="{Binding Path=PreviewItem}">
        <ScrollViewer Grid.Column="0" 
                      VerticalScrollBarVisibility="Auto">

            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>


                <!--Preview Item-->
                <Grid Grid.Row="0" >
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>

                    <!--Close Preview button-->
                    <Button Grid.Row="0" 
                            Content="Close Preview" 
                            HorizontalAlignment="Left"  
                            Command="{Binding ElementName=PreviewRegion, Path=DataContext.ClosePreview}"/>

                    <!--User Name-->
                    <StackPanel Grid.Row="1" Orientation="Horizontal" VerticalAlignment="Top">
                        <Image Source="{Binding Path=PreviewItemOwner.DisplayPhotoUrl}" Height="24" Width="24"/>
                        <TextBlock Text="{Binding Path=PreviewItemOwner.FullName}" TextTrimming="CharacterEllipsis" Height="40"/>
                    </StackPanel>

                    <!--Preview Image-->
                    <Border Grid.Row="2"  Height="100" Width="100">
                        <Image Source="{Binding Path=ImageUrl}" Stretch="Uniform"/>
                    </Border>
                </Grid>

                <!--Image Title-->
                <TextBlock Grid.Row="1" Text="{Binding Path=Title}" Height="24"/>

                <!--Image Details-->
                <Grid Grid.Row="2">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <!--Description-->
                    <TextBlock Grid.Row="0" Text="{Binding Path=Description}" TextWrapping="WrapWithOverflow"/>

                    <!--Views-->
                    <StackPanel Grid.Row="1" Orientation="Horizontal">
                        <TextBlock Text="Views :"/>
                        <TextBlock Text="{Binding Path= Views}"/>
                    </StackPanel>
                </Grid>

                <!--Num of Comments-->
                <StackPanel  Grid.Row="3" Orientation="Vertical" HorizontalAlignment="Center">
                    <TextBlock Text="{Binding Path=NumOfComments, Converter={x:Static converter:NumCommentsToTextConverter.Instance}}"></TextBlock>
                    <Button Content="Load Comments"
                            Style="{StaticResource DefaultButtonStyle}" 
                            Command="{Binding ElementName=PreviewRegion, Path=DataContext.LoadComments}"
                            Visibility="{Binding Path=NumOfComments, Converter={x:Static converter:NumCommentsToVisibilityConverter.Instance}}"/>

                </StackPanel>

                <ItemsControl Grid.Row="4" ItemsSource="{Binding Path=CommentsList}" ItemTemplate="{StaticResource ResourceKey=CommentItemTemplate}">
                    <ItemsControl.ItemsPanel>
                        <ItemsPanelTemplate>
                            <StackPanel Orientation="Vertical"/>
                        </ItemsPanelTemplate>
                    </ItemsControl.ItemsPanel>
                </ItemsControl>
                
            </Grid>

        </ScrollViewer>







    </Grid>
</UserControl>
